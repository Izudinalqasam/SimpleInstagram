<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content" android:id="@+id/item_feed_parent">

    <com.mikhaellopez.circularimageview.CircularImageView
            android:layout_width="100dp"
            android:layout_height="100dp"
            android:src="@drawable/network_profile"
            android:id="@+id/img_profil_feed"
            android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <TextView
            android:text="Jackson FIve"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:id="@+id/tv_name_feed" app:layout_constraintStart_toEndOf="@+id/img_profil_feed"
            android:layout_marginStart="16dp" app:layout_constraintTop_toTopOf="@+id/img_profil_feed"
            android:textStyle="bold" app:layout_constraintBottom_toBottomOf="@+id/img_profil_feed"/>
    <TextView
            android:text="16 Jan 2019"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:textSize="12sp"
            android:id="@+id/tv_date_feed" app:layout_constraintStart_toEndOf="@+id/img_profil_feed"
            android:layout_marginStart="16dp" app:layout_constraintTop_toBottomOf="@+id/tv_name_feed"
            android:layout_marginTop="8dp"/>
    <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" app:srcCompat="@drawable/ic_more_vert_black"
            android:id="@+id/ic_option_feed" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp"
            app:layout_constraintTop_toTopOf="@+id/img_profil_feed" android:layout_marginTop="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_title_feed" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/img_profil_feed" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp" app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp"/>
    <TextView
            android:text="TextView"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:id="@+id/tv_content_feed" android:layout_marginTop="8dp"
            app:layout_constraintTop_toBottomOf="@+id/tv_title_feed" app:layout_constraintEnd_toEndOf="parent"
            android:layout_marginEnd="8dp" app:layout_constraintStart_toStartOf="parent"
            android:layout_marginStart="8dp"/>
    <ImageView
            android:layout_width="0dp"
            android:layout_height="150dp"
            android:src="@drawable/banner_kemerdekaan"
            android:id="@+id/img_banner_feed"
            app:layout_constraintStart_toStartOf="parent" android:layout_marginStart="8dp"
            app:layout_constraintEnd_toEndOf="parent" android:layout_marginEnd="8dp" android:scaleType="centerCrop"
            android:layout_marginTop="8dp" app:layout_constraintTop_toBottomOf="@+id/tv_content_feed"/>
</androidx.constraintlayout.widget.ConstraintLayout>